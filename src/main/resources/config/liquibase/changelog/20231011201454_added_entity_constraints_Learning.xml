<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Learning.
    -->
    <changeSet id="20231011201454-2" author="jhipster">

        <addColumn tableName="learning">
            <column name="lesson_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </addColumn>

        <addForeignKeyConstraint baseColumnNames="lesson_id"
                                 baseTableName="learning"
                                 constraintName="fk_learning__lesson_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lesson"/>
    </changeSet>
</databaseChangeLog>
